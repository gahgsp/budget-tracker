<div class="max-w-4xl mx-auto py-8 px-4">
  <h1 class="text-3xl font-bold mb-6">Transactions</h1>

  <div class="mb-4">
    <%= link_to "Add Transaction", new_transaction_path, class: "bg-[#3FBF3F] hover:filter hover:brightness-90 transition text-white px-4 py-2 rounded-md shadow" %>
  </div>

  <%# [url]: defines the URL where we will send our request; %>
  <%# [method]: used to defined which HTTP method we are using (default is POST); %>
  <%# [local]: defines whether or not are we using AJAX. "True" defines using normal HTML requests. %>
  <!-- Filter Panel -->
  <div class="mb-6">
    <%= form_with url: transactions_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |form| %>
      
      <div>
        <%= form.label :type, "Type", class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :type, [["All", ""], ["Income", "income"], ["Expense", "expense"]],
            { selected: params[:type] }, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
      </div>

      <div>
        <%= form.label :category_id, "Category", class: "block text-sm font-medium text-gray-700" %>
        <%= form.collection_select :category_id, @categories, :id, :name,
            { include_blank: "All", selected: params[:category_id] }, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
      </div>


      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= form.label :start_date, "Start Date", class: "block text-sm font-medium text-gray-700" %>
          <%= form.date_field :start_date, value: params[:start_date], class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
        </div>

        <div>
          <%= form.label :end_date, "End Date", class: "block text-sm font-medium text-gray-700" %>
          <%= form.date_field :end_date, value: params[:end_date], class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
        </div>
      </div>

      <div>
        <%= form.submit "Filter", class: "bg-[#F3C734] hover:filter hover:brightness-90 transition text-white px-4 py-2 rounded-md shadow" %>
      </div>

    <% end %>
  </div>

  <!-- Totals Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
      <!-- Income Card -->
      <div class="bg-[#3FBF3F] p-4 rounded-xl shadow-md text-white">
        <h2 class="text-lg font-semibold">Total Income</h2>
        <%# "number_with_precision" is a Rails helper to format numbers. %>
        <p class="text-2xl font-bold mt-2">+ $<%= number_with_precision(@total_income, precision: 2) %></p>
      </div>

      <!-- Expenses Card -->
      <div class="bg-[#D83A3A] p-4 rounded-xl shadow-md text-white">
        <h2 class="text-lg font-semibold">Total Expenses</h2>
        <%# "number_with_precision" is a Rails helper to format numbers. %>
        <p class="text-2xl font-bold mt-2">- $<%= number_with_precision(@total_expense, precision: 2) %></p>
      </div>

      <!-- Balance Card -->
      <div class="bg-[#3B2A7B] p-4 rounded-xl shadow-md text-white">
        <h2 class="text-lg font-semibold">Total Balance</h2>
        <%# "number_with_precision" is a Rails helper to format numbers. %>
        <p class="text-2xl font-bold mt-2">$<%= number_with_precision(@total_balance, precision: 2) %></p>
      </div>
  </div>


  <table class="min-w-full bg-[#ffffff] shadow-md rounded-lg overflow-hidden">
    <thead class="bg-gray-100 text-left text-sm font-semibold text-[#121212]">
      <tr>
        <th class="px-4 py-3">Date</th>
        <th class="px-4 py-3">Type</th>
        <th class="px-4 py-3">Amount</th>
        <th class="px-4 py-3">Category</th>
        <th class="px-4 py-3">Description</th>
      </tr>
    </thead>
    <tbody class="text-[#121212] text-sm">
      <% @transactions.each do |t| %>
        <tr class="border-t">
          <td class="px-4 py-2"><%= t.date %></td>
          <td class="px-4 py-2 capitalize"><%= t.transaction_type %></td>
          <td class="px-4 py-2 <%= t.transaction_type == 'expense' ? 'text-[#D83A3A]' : 'text-[#3FBF3F]' %>">
            <%= number_to_currency(t.amount) %>
          </td>
          <td class="px-4 py-2"><%= t.category.name %></td>
          <td class="px-4 py-2"><%= t.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
